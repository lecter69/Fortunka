<% title "Pokaż fortunkę" %>

<% if notice -%>
<div id="notice"><%= notice %></div>
<% end -%>

<article class="single">
  <div class="attribute">
    <span class="name">Autor</span>
    <span class="value"><%= @fortune.source %></span>
  </div>
  <div class="attribute">
   
    <span class="value"><%= @fortune.body %></span>
  </div>
  <div class="link">
    <%= link_to 'Edytuj', edit_fortune_path(@fortune) %> |
    <%= link_to 'Powrót', fortunes_path %>
  </div>
</article>
<hr/>
<% if @fortune.comments.any? %>
  <h2>Komentarze</h2>
  <%= render :partial => 'comments/comment', :collection => @fortune.comments %>
<% end %>

<% if current_user %>
<h2>Dodaj nowy komentarz</h2>
<%= render :partial => 'comments/form' %>
<% end %>
